	Definir horas, minutos, segundos1 Como Entero;
	// procesos
	Escribir 'Ingrese el tiempo en horas: ';
	Leer horas;
	minutos <- horas*60;
	segundos1 <- horas*3600;
	Escribir 'El equivalente de ', horas, ' hora/s en minutos es: ', minutos, ' y las horas en segundos son: ', segundos1;
